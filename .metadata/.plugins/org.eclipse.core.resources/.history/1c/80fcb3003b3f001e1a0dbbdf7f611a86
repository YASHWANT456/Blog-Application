package com.rishu.quiz_application.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.rishu.quiz_application.Entity.Questions;
import com.rishu.quiz_application.repo.QuestionsRepo;

@Service
public class QuestionService {
	
	@Autowired
	QuestionsRepo questionsRepo;

	public List<Questions> getAllQuestions() {
		// TODO Auto-generated method stub
		 return questionsRepo.findAll();
		
	}
	public List<Questions>getQuestionsByCategory(String category)
	{
		return questionsRepo.findByCategory(category);
	}
	public String addQuestions(Questions questions) {
		
		questionsRepo.save(questions);
		return "Success";
		
		
		
	}

}
